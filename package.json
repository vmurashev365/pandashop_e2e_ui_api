{
  "name": "pandashop-test-pyramid",
  "version": "1.0.0",
  "description": "Comprehensive test automation framework with proper test pyramid architecture for Pandashop.md e-commerce testing",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:pyramid",
    "test:pyramid": "npm run test:api && npm run test:ui && npm run test:e2e",
    "test:api": "npm run test:api:bdd && npm run test:api:pure",
    "test:api:bdd": "cucumber-js tests/api/bdd/features/**/*.feature --require tests/api/bdd/steps/**/*.ts --require-module ts-node/register",
    "test:api:pure": "playwright test tests/api/contracts tests/api/performance tests/api/security tests/api/edge-cases",
    "test:ui": "cucumber-js tests/ui/features/**/*.feature --require tests/ui/steps/**/*.ts --require-module ts-node/register",
    "test:e2e": "cucumber-js tests/e2e/features/**/*.feature --require tests/e2e/steps/**/*.ts --require-module ts-node/register",
    "test:smoke": "npm run test:api:smoke && npm run test:e2e:smoke",
    "test:api:smoke": "playwright test tests/api --grep @smoke",
    "test:e2e:smoke": "cucumber-js tests/e2e/features/**/*.feature --tags @smoke",
    "test:performance": "playwright test tests/api/performance",
    "test:security": "playwright test tests/api/security",
    "test:headed": "HEADED=true npm run test:e2e",
    "test:debug": "DEBUG=true npm run test",
    "report": "npm run report:api && npm run report:cucumber",
    "report:api": "playwright show-report",
    "report:cucumber": "open reports/cucumber-report.html",
    "lint": "eslint tests/**/*.ts",
    "lint:fix": "eslint tests/**/*.ts --fix",
    "format": "prettier --write tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "install:browsers": "playwright install",
    "clean": "rimraf test-results playwright-report reports coverage"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "gherkin",
    "bdd",
    "test-pyramid",
    "api-testing",
    "e2e-testing",
    "ui-testing",
    "typescript",
    "test-automation",
    "pandashop"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@cucumber/html-formatter": "^21.0.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "@types/node": "^20.10.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "joi": "^17.11.0",
    "@faker-js/faker": "^8.3.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "allure-playwright": "^2.9.0",
    "allure-commandline": "^2.25.0",
    "multiple-cucumber-html-reporter": "^3.5.0",
    "fast-check": "^3.15.0",
    "ajv": "^8.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ]
}
